@using HelloBooks.Models
@model HelloBooks.Models.ReadingDifficulty

<tr>
	@using (Html.BeginForm("NewReadingDifficulty", "User"))
	{
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true,"",new {@class = "text-danger"})
		@Html.HiddenFor(model=>model.ApplicationUserId, new {htmlAttributes = new {@Value = Model.ApplicationUserId}})

	<td>
		@Html.EditorFor(model=>model.DifficultyTitle, new {htmlAttributes = new {@class="form-control"}})
	</td>
	<td>
		@Html.EditorFor(model=>model.PagesPerHour,new {htmlAttributes = new {@class="form-control"}})
	</td>
		<td>
			<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok"></span></button>
		</td>
	}
</tr>