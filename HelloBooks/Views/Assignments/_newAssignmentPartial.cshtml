@model HelloBooks.Models.Assignment

<tr>
	<td colspan="4"><h4>New Assignment</h4></td>
</tr>
<tr>
	<th>Assignment Name</th>
	<th>Due Date</th>
	<th>Pages Per Hour</th>
	<th></th>
</tr>
<tr>
	@using (Html.BeginForm("NewAssignment", "Assignments"))
	{
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<td>
			@Html.EditorFor(model => model.AssignmentName, new { htmlAttributes = new { @class = "form-control", @Value= Model.Book.Title } })
		</td>
		<td>
			@Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control", @id="DueDate" } })
		</td>
		<td>
			@Html.EditorFor(model => model.ReadingDifficulty, new { htmlAttributes = new { @class = "form-control" } })
		</td>
		<td>
			<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-check"></span></button>

		</td>
	}
</tr>

